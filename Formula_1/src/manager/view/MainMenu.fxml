<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<!-- 
	FXML is a XML-based user interface markup language for designing
	controller GUIController.java
 -->

<AnchorPane id="root" maxHeight="1080.0" maxWidth="1920.0" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="manager.controller.MainMenuController">
   <children>
   
               	  <!-- Background image and settings-->
      <ImageView fitHeight="1080.0" fitWidth="1920.0">
         <image>
            <Image url="@../../../images/menu/menuBackground.jpg" />
         </image>
      </ImageView>
      
            <!-- Formula string and settings -->
      <Text fill="#ff2800" layoutX="118.0" layoutY="173.0" strokeLineJoin="ROUND" strokeType="OUTSIDE" text="FORMULA 1 ">
         <font>
            <Font name="Haettenschweiler" size="130.0" />
         </font>
         <stroke>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop color="#c90707" />
                  <Stop color="#c90707" offset="0.011494252873563218" />
                  <Stop color="#e1dcdc" offset="0.8160919540229883" />
                  <Stop color="#e1dcdc" offset="1.0" />
               </stops>
            </LinearGradient>
         </stroke>
      </Text>
      
      <!-- Manager string and settings-->
      <Text fill="#ff2800" layoutX="268.0" layoutY="303.0" strokeLineJoin="ROUND" strokeType="OUTSIDE" text="MANAGER">
         <font>
            <Font name="Haettenschweiler" size="130.0" />
         </font>
         <stroke>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop color="#c90707" />
                  <Stop color="#c90707" offset="0.011494252873563218" />
                  <Stop color="#e1dcdc" offset="0.8160919540229883" />
                  <Stop color="#e1dcdc" offset="1.0" />
               </stops>
            </LinearGradient>
         </stroke>
      </Text>
      <VBox layoutX="-21.0" layoutY="657.0" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="33.0">
         <children>
            
            <!-- 
            	StartGame.png button and settings
            	if the image is clicked onAction is triggered and will call the startNewGame() in GUIController.java 
            -->
            <Button mnemonicParsing="false" onAction="#startNewGame" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: transparent;" text="Button">
               <graphic>
                  <ImageView fitHeight="180.0" fitWidth="452.0" pickOnBounds="true" preserveRatio="true" style="-fx-background-color: transparent;">
                     <image>
                        <Image url="@../../../images/menu/StartGame.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
               
            <!-- 
            	Resume.png button and settings
            	if the image is clicked onAction is triggered and will call the resume() in GUIController.java 
            -->   
            <Button mnemonicParsing="false" onAction="#resume" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: transparent;" text="Button">
               <graphic>
                  <ImageView fitHeight="180.0" fitWidth="452.0" onMouseClicked="#resume" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/menu/Resume.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            
            <!-- 
            	Options.png button and settings
            	if the image is clicked onAction is triggered and will call the options() in GUIController.java 
            --> 
            <Button mnemonicParsing="false" onAction="#options" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: transparent;" text="Button">
               <graphic>
                  <ImageView fitHeight="180.0" fitWidth="452.0" onMouseClicked="#options" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/menu/Options.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            
            <!-- 
            	HighScores.png button and settings
            	if the image is clicked onAction is triggered and will call the highscores() in GUIController.java 
            --> 
            <Button mnemonicParsing="false" onAction="#highscores" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: transparent;" text="Button">
               <graphic>
                  <ImageView fitHeight="180.0" fitWidth="452.0" onMouseClicked="#highscores" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/menu/HighScores.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            
            <!-- 
            	Exit.png button and settings
            	if the image is clicked onAction is triggered and will call the exit() in GUIController.java 
            --> 
            <Button mnemonicParsing="false" onAction="#exit" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: transparent;" text="Button">
               <graphic>
                  <ImageView fitHeight="180.0" fitWidth="452.0" onMouseClicked="#exit" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/menu/Exit.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
